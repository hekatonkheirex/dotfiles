    disable-history: false;
    hide-scrollbar: true;
    display-drun: "🪶 Run";    
    scroll-method: 1;
    display-power: "Power menu";
    display-emoji: "💀 Emoji";
    sidebar-mode: true;
    font: "Inter 18";
}

