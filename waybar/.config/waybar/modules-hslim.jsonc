{
  "hyprland/workspaces": {
    "disable-scroll": false,
    "on-click": "activate",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
    // "persistent_workspaces": {
    //   "*": 6,
    // },
    "format": "{icon}",
    "format-icons": {
       // "1": "&#xecfd;",
       // "2": "&#xebef;",
       // "3": "&#xeaa4;",
       // "4": "&#xeaec;",
       // "5": "&#xeae3;",
       // "6": "&#xed03;",
			"urgent": "",
			"active": "",
			"default": "",
    "sort-by-number": true
    },
  },

  "hyprland/window": {
    "max-length": 50,
    "format": "{}",
    "rewrite": {
      "(.*) — Mozilla Firefox": "$1",
      "(.*) - Vivaldi": "$1",
      "(.*) - Thunar": "$1",
      "(.*) - Discord": "$1",
      // ": "Desktop",
      "~": "kitty",
      "n ": "neovim",
    },
    "separate-outputs": true
  },

  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 18,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": [
      "kitty"
    ],
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition"
    },
    "rewrite": {
      "New Tab": "Brave",
      "Foot Server": "Terminal"
    }
  },

  "backlight": {
    "interval": 2,
    //"device": "amdgpu_bl0",
    "format": "{icon} {percent}%",
    "format-icons": ["&#xeb7f;"],
    "on-scroll-up": "light -A 5%",
    "on-scroll-down": "light -U 5%",
    "smooth-scrolling-threshold": 1,
    "tooltip": false,
  },

  "battery": {
		"interval": 60,
		//"bat": "BAT1",
		//"adapter": "ACAD",
		"full-at": 100,
		"design-capacity": false,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20
    },
    "format": "{icon} {capacity}%",
    "format-charging": "&#xea33; {capacity}%",
    "format-plugged": "&#xef3b; {capacity}%",
    "format-full": "&#xf668; 100%",
    "format-icons": ["&#xea34;", "&#xea2f;", "&#xea30;", "&#xea31;", "&#xea32;"],
    "format-alt": "{time}",
    "format-time": "{H}h {M}min",
    "tooltip": true,
  },

  "clock": {
    "format": "&#xea70; {:%H:%M}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "format": {
        "today": "<span color = '#f38ba8'><b><u>{}</u></b></span>",
      },
    },
    "format-alt": "&#xea53; {:%Y-%m-%d}",
  },

  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "&#xef0e;",
      "deactivated": "&#xf106;"
    }
  },
  
  "network": {
    "interval": 5,
    //"interface": "wlan*", // (Optional) To force the use of this interface, set it for netspeed to work
    "format-wifi": "",
    "format-ethernet": "",
    "format-linked": "",
    "format-disconnected": "",
    "format-disabled": "",
    "tooltip-format": "{essid} :  {bandwidthUpBits} |  {bandwidthDownBits}",
    "on-click": "[[ ! `pidof nm-connection-editor` ]] && nm-connection-editor || pkill nm-connection-e",
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "&#xf1c3; Muted",
    "format-bluetooth": "&#xea37; {volume}%",
    "format-source": "&#xeaf0; {volume}%",
    "format-source-muted": "&#xed16; Muted",
    "format-icons": {
      "headphone": "&#xeabd;",
      "hands-free": "&#xf5a9;",
      "headset": "&#xeb90;",
      "phone": "&#xeb09;",
      "portable": "&#xea8a;",
      "default": ["&#xeb50;", "&#xeb4f;", "&#xeb51;"]
    },
    "scroll-step": 5.0,
    "on-click": "amixer set Master toggle",
    "on-click-right": "pavucontrol",
    "smooth-scrolling-threshold": 1,
  },

  "wireplumber": {
    "format": "{icon} {volume}%",
    "format-muted": "&#xf1c3; Muted",
    "format-bluetooth": "&#xea37; {volume}%",
    "format-source": "&#xeaf0; {volume}%",
    "format-source-muted": "&#xed16; Muted",
    "format-icons": {
      "headphone": "&#xeabd;",
      "hands-free": "&#xf5a9;",
      "headset": "&#xeb90;",
      "phone": "&#xeb09;",
      "portable": "&#xea8a;",
      "default": ["&#xeb50;", "&#xeb4f;", "&#xeb51;"]
    },
    "scroll-step": 5.0,
    "on-click": "amixer set Master toggle",
    "on-click-right": "pavucontrol",
    "smooth-scrolling-threshold": 1,
  },


  "tray": {
    "icon-size": 16,
    "spacing": 8,
  },

  "hyprland/language": {
    "format": "{}",
    "format-en": "US",
    "format-es": "ES",
    "tooltip": "false",
  },

  "power-profiles-daemon": {
  "format": "{icon}",
  "tooltip-format": "Power profile: {profile}",
  "tooltip": true,
  "format-icons": {
    "default": "&#xea38;",
    "performance": "&#xea38;",
    "balanced": "&#xebc2;",
    "power-saver": "&#xed4f;"
    }
  },

  "image": {
    "path": "/home/mura/.config/waybar/hyprland.png",
    "size": 24,
    "interval": 1,
    "on-click": "killall rofi || rofi -show drun",
    "tooltip": false,
  },

  "custom/weather": {
    "exec": "python ~/.config/waybar/scripts/weather.py",
    "restart-interval": 300,
    "return-type": "json",
    "on-click": "xdg-open https://weather.com/es-PY/tiempo/hoy/l/9cee4da1e5921087a9f5428a20d8a19635cbec01a0ef30a7eda1301a91975371"
    // "format-alt": "{alt}",
  },
  
  "custom/wall":{
    "format":"&#xeb00;",
    // "interval": 1,
    "on-click": "~/.config/hypr/wall",
    "tooltip": false,
  },

  // "custom/swaync": {
  //   "format": "&#xea35;",
  //   "on-click": "~/.config/swaync/scripts/tray_waybar.sh",
  //   "tooltip": false,
  // },

  "custom/swaync": {
    "tooltip":true,     
    "format": "{icon}",
    "format-icons": {
      "notification": "&#xea35;<span foreground='red'><sup>!</sup></span>",
      "none": "&#xea35;",
      "dnd-notification": "&#xece9;<span foreground='red'><sup>!</sup></span>",
      "dnd-none": "&#xece9;",
      "inhibited-notification": "&#xeff1;<span foreground='red'><sup>!</sup></span>",
      "inhibited-none": "&#xeff1;",
      "dnd-inhibited-notification": "&#xf813;<span foreground='red'><sup>!</sup></span>",
      "dnd-inhibited-none": "&#xf813;"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true,
  },

  "custom/spotify": {
    "exec": "/usr/bin/python3 /home/mura/.config/waybar/scripts/spotsway.py --player spotify",
    "format": "&#xed03; {}",
    "return-type": "json",
    "on-click": "playerctl play-pause",
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous"
  },

  "custom/pacman": {
    "format": "&#xeaff; {}",
    "interval": 3600,
    "exec": "checkupdates | wc -l",
    "exec-if": "exit 0",
    "on-click": "kitty --hold sh -c 'paru'; pkill -SIGRTMIN+8 waybar",
    "signal": 8
  },

  "custom/updates": {
    "format": "{icon} {}",
    "return-type": "json",
    "format-icons": {
      "has-updates": "&#xeaff;",
      "updated": "&#xf16c;"
    },
    "exec-if": "which waybar-module-pacman-updates",
    "exec": "waybar-module-pacman-updates  --interval-seconds 5 --network-interval-seconds 300",
    "on-click": "kitty --hold sh -c 'paru'; pkill -SIGRTMIN+8 waybar"
  },

  "custom/kernel": {
    "format": "{}",
    "exec": "~/.local/bin/kernel"
  },

  "custom/themeswitcher": {
    "format": "&#xf51d;",
    "on-click": "~/.config/waybar/themeswitcher.sh",
    "tooltip": false,
  }
}
